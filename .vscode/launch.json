{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: FastAPI (uvicorn)",
        "type": "debugpy",
        "request": "launch",
  
        // module 방식을 사용하면 uvicorn을 Python 모듈로 실행
        "module": "uvicorn",
  
        // uvicorn 실행시 필요한 인자: "app.main:app" 형식
        "args": [
          "app.main:app",
          "--reload",      // 코드 수정 시 자동 리로드
          "--host",
          "127.0.0.1",
          "--port",
          "8000"
        ],
  
        // VS Code 내장 터미널에서 실행할지 여부
        "console": "integratedTerminal"
      }
    ]
  }
  